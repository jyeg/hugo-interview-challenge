{
  "name": "hugo-interview-challenge",
  "version": "1.0.0",
  "description": "Interview starter project for the Hugo take home project",
  "scripts": {
    "start:api": "nodemon --inspect --watch \"api/**/*\" --exec node --require @swc-node/register --require dotenv/config ./api/index.ts",
    "start:client": "vite ./client",
    "start": "concurrently --kill-others \"npm run start:api\" \"npm run start:client\"",
    "test": "jest --watchAll",
    "format": "prettier --write .",
    "migrate": "prisma migrate dev --schema ./api/prisma/schema.prisma",
    "studio": "prisma studio --schema ./api/prisma/schema.prisma"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/popularlab/hugo-interview-challenge.git"
  },
  "author": "Hugo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/popularlab/hugo-interview-challenge/issues"
  },
  "homepage": "https://github.com/popularlab/hugo-interview-challenge#readme",
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-icons": "^1.3.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^8.0.0",
    "lucide-react": "^0.456.0",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.53.2",
    "react-router-dom": "^6.28.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@swc-node/register": "^1.6.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.49",
    "prettier": "^3.1.1",
    "prisma": "^5.7.0",
    "tailwindcss": "^3.4.14",
    "ts-jest": "^29.2.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
